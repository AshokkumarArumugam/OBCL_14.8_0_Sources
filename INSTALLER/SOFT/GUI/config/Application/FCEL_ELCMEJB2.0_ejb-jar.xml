<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:ejb="http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
         version="3.0">
    <display-name>ELCMEJB</display-name>
    <enterprise-beans>
        <session>
            <ejb-name>ELEJBBean</ejb-name>
            <mapped-name>ejb/{REF_LOCATION}/ELCMEJB.jar/ELEJBBean</mapped-name>
            <ejb-class>com.ofss.elcm.ejb.ELEJBBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
		 <env-entry>
	        <env-entry-name>RES_APP_NAME</env-entry-name>
	        <env-entry-type>java.lang.String</env-entry-type>
	        <env-entry-value>{REF_LOCATION}</env-entry-value>
		</env-entry>

			<persistence-context-ref>
				<persistence-context-ref-name>{REF_LOCATION}/ELCMEntities</persistence-context-ref-name>
				<persistence-unit-name>{REF_LOCATION}/ELCMEntities</persistence-unit-name>
			</persistence-context-ref>
			<persistence-context-ref>
				<persistence-context-ref-name>{REF_LOCATION}/ELCMRepEntities</persistence-context-ref-name>
				<persistence-unit-name>{REF_LOCATION}/ELCMRepEntities</persistence-unit-name>
			</persistence-context-ref>
        </session>
		<session>
            <ejb-name>ELBatchEJBBean</ejb-name>
            <mapped-name>ejb/{REF_LOCATION}/ELCMEJB.jar/ELBatchEJBBean</mapped-name>
            <ejb-class>com.ofss.elcm.ejb.ELBatchEJBBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
		 <env-entry>
	        <env-entry-name>RES_APP_NAME</env-entry-name>
	        <env-entry-type>java.lang.String</env-entry-type>
	        <env-entry-value>{REF_LOCATION}</env-entry-value>
		</env-entry>

			<persistence-context-ref>
				<persistence-context-ref-name>{REF_LOCATION}/ELCMEntities</persistence-context-ref-name>
				<persistence-unit-name>{REF_LOCATION}/ELCMEntities</persistence-unit-name>
			</persistence-context-ref>
			<persistence-context-ref>
				<persistence-context-ref-name>{REF_LOCATION}/ELCMRepEntities</persistence-context-ref-name>
				<persistence-unit-name>{REF_LOCATION}/ELCMRepEntities</persistence-unit-name>
			</persistence-context-ref>
        </session>
		<session>
            <ejb-name>ELUtilServiceEJBBean</ejb-name>
            <mapped-name>ejb/{REF_LOCATION}/ELCMEJB.jar/ELUtilServiceEJBBean</mapped-name>
            <ejb-class>com.ofss.elcm.ejb.ELUtilServiceEJBBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
		 <env-entry>
	        <env-entry-name>RES_APP_NAME</env-entry-name>
	        <env-entry-type>java.lang.String</env-entry-type>
	        <env-entry-value>{REF_LOCATION}</env-entry-value>
		</env-entry>

			<persistence-context-ref>
				<persistence-context-ref-name>{REF_LOCATION}/ELCMEntities</persistence-context-ref-name>
				<persistence-unit-name>{REF_LOCATION}/ELCMEntities</persistence-unit-name>
			</persistence-context-ref>
			<persistence-context-ref>
				<persistence-context-ref-name>{REF_LOCATION}/ELCMRepEntities</persistence-context-ref-name>
				<persistence-unit-name>{REF_LOCATION}/ELCMRepEntities</persistence-unit-name>
			</persistence-context-ref>
        </session>
		<session>
            <ejb-name>ELUtilSchedulerEJBBean</ejb-name>
            <mapped-name>ejb/{REF_LOCATION}/ELCMEJB.jar/ELUtilSchedulerEJBBean</mapped-name>
            <ejb-class>com.ofss.elcm.ejb.ELUtilSchedulerEJBBean</ejb-class>
           <transaction-type>Container</transaction-type>
		 <env-entry>
	        <env-entry-name>RES_APP_NAME</env-entry-name>
	        <env-entry-type>java.lang.String</env-entry-type>
	        <env-entry-value>{REF_LOCATION}</env-entry-value>
		</env-entry>

			<persistence-context-ref>
				<persistence-context-ref-name>{REF_LOCATION}/ELCMEntities</persistence-context-ref-name>
				<persistence-unit-name>{REF_LOCATION}/ELCMEntities</persistence-unit-name>
			</persistence-context-ref>
			<persistence-context-ref>
				<persistence-context-ref-name>{REF_LOCATION}/ELCMRepEntities</persistence-context-ref-name>
				<persistence-unit-name>{REF_LOCATION}/ELCMRepEntities</persistence-unit-name>
			</persistence-context-ref>
        </session>
    </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>ELEJBBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>
