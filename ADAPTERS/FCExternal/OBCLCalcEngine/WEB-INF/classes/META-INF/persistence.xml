<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">


	<persistence-unit name="{REF_LOCATION}/OBCLCalcEntities"
		transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>{INIT_DS}</jta-data-source>
		<class>com.ofss.fcc.calcengine.entity.RfRDetails</class>
		<class>com.ofss.fcc.calcengine.entity.CurrencyCountry</class>
		<class>com.ofss.fcc.calcengine.entity.CurrencyTest</class>
		<class>com.ofss.fcc.calcengine.entity.Currency</class>
		<class>com.ofss.fcc.calcengine.dto.*</class>
		<class>com.ofss.fcc.calcengine.dao.*</class>
		<class>com.ofss.fcc.calcengine.*</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="eclipselink.target-server" value="{TARGET}" />
			<property name="javax.persistence.jtaDataSource" value="{INIT_DS}" />
		</properties>
	</persistence-unit>
</persistence>